@model SacramentMeetingPlanner.Models.Speaker

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Speaker</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MeetingID" class="control-label"></label>
                <select asp-for="MeetingID" class="form-control" asp-items="ViewBag.MeetingID"></select>
            </div>
            <div class="form-group">
                <label asp-for="SpeakerName" class="control-label"></label>
                <input asp-for="SpeakerName" class="form-control" />
                <span asp-validation-for="SpeakerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic" class="control-label"></label>
                <input asp-for="Topic" class="form-control" />
                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg icon-xlg fa fa-save" data-toggle="tooltip" title="Save Speaker Record"></button>&nbsp;&nbsp;<a class="btn btn-info btn-lg icon-xlg fa fa-list" data-toggle="tooltip" title="Back to Speaker List" asp-action="Index"></a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
